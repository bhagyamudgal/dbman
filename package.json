{
    "name": "dbman",
    "version": "1.0.0",
    "description": "A flexible PostgreSQL database management CLI tool with persistent configuration",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "dbman": "./dist/index.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bhagyamudgal/dbman.git"
    },
    "bugs": {
        "url": "https://github.com/bhagyamudgal/dbman/issues"
    },
    "homepage": "https://github.com/bhagyamudgal/dbman#readme",
    "scripts": {
        "dev": "tsx src/index.ts",
        "dev:watch": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "format:check": "prettier --check .",
        "format": "prettier --write .",
        "prepublishOnly": "pnpm run clean && pnpm run build",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky"
    },
    "keywords": [
        "cli",
        "database",
        "postgresql",
        "postgres",
        "sql",
        "management",
        "query",
        "typescript",
        "brocli"
    ],
    "author": "",
    "license": "MIT",
    "packageManager": "pnpm@10.12.4",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@types/command-exists": "^1.2.3",
        "@types/node": "^24.0.10",
        "@types/pg": "^8.15.4",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.35.1"
    },
    "dependencies": {
        "@drizzle-team/brocli": "^0.11.0",
        "@inquirer/prompts": "^7.6.0",
        "@types/table": "^6.3.2",
        "chalk": "^5.4.1",
        "cli-table3": "^0.6.5",
        "command-exists": "^1.2.9",
        "pg": "^8.16.3",
        "table": "^6.9.0"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
